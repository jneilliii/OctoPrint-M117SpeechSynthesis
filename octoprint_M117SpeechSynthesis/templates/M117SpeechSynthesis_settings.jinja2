<h4>M117 Speech Synthesis Settings</h4>
<form class="form-horizontal" id="settings_plugin_M117SpeechSynthesis_form">
	<div class="label-important row-fluid" data-bind="visible: !speechEnabledBrowser()">Your browser does not support Speech Sythensis.</div>
	<div class="row-fluid" data-bind="visible: speechEnabledBrowser()">
		<div class="control-group" data-bind="visible: true">
			<label class="control-label">{{ _('Enable Speech') }}</label>
			<div class="controls">
				<input type="checkbox" data-bind="checked: enableSpeech">
			</div>
		</div>
	</div>
	<div class="row-fluid" data-bind="visible: (enableSpeech() && speechEnabledBrowser())">
		<div class="control-group">
			<label class="control-label">{{ _('Voice') }}</label>
			<div class="controls">
				<select data-bind="options: voices,optionsText: 'name',optionsValue: 'value',value: speechVoice"></select>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">{{ _('Language') }}</label>
			<div class="controls">
				<input type="text" class="input" data-bind="value: speechLanguage" />
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">{{ _('Volume') }}</label>
			<div class="controls">
				<div class="slider slider-horizontal" style="width: 165px;">
					<div class="slider-track">
						<div class="slider-selection" style="left: 0%; width: 50%;"></div>
						<div class="slider-handle round" style="left: 50%;"></div>
						<div class="slider-handle round hide" style="left: 0%;"></div>
					</div>
					<div class="tooltip top hide" style="top: -24px; left: -5px;">
						<div class="tooltip-arrow"></div>
						<div class="tooltip-inner">100</div>
					</div>
					<input type="number" style="width: 153px; display: none;" data-bind="slider: {min: 0, max: 1, step: .1, value: speechVolume, tooltip: 'hide'}">
				</div>
				<div data-bind="text: speechVolume" style="display:inline;padding-left:20px;"></div>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">{{ _('Pitch') }}</label>
			<div class="controls">
				<div class="slider slider-horizontal" style="width: 165px;">
					<div class="slider-track">
						<div class="slider-selection" style="left: 0%; width: 50%;"></div>
						<div class="slider-handle round" style="left: 50%;"></div>
						<div class="slider-handle round hide" style="left: 0%;"></div>
					</div>
					<div class="tooltip top hide" style="top: -24px; left: -5px;">
						<div class="tooltip-arrow"></div>
						<div class="tooltip-inner">100</div>
					</div>
					<input type="number" style="width: 153px; display: none;" data-bind="slider: {min: 0, max: 2, step: .1, value: speechPitch, tooltip: 'hide'}">
				</div>
				<div data-bind="text: speechPitch" style="display:inline;padding-left:20px;"></div>
			</div>
		</div>
		<div class="control-group">
			<label class="control-label">{{ _('Rate') }}</label>
			<div class="controls">
				<div class="slider slider-horizontal" style="width: 165px;">
					<div class="slider-track">
						<div class="slider-selection" style="left: 0%; width: 50%;"></div>
						<div class="slider-handle round" style="left: 50%;"></div>
						<div class="slider-handle round hide" style="left: 0%;"></div>
					</div>
					<div class="tooltip top hide" style="top: -24px; left: -5px;">
						<div class="tooltip-arrow"></div>
						<div class="tooltip-inner">100</div>
					</div>
					<input type="number" style="width: 153px; display: none;" data-bind="slider: {min: .1, max: 10, step: .1, value: speechRate, tooltip: 'hide'}">
				</div>
				<div data-bind="text: speechRate" style="display:inline;padding-left:20px;"></div>
			</div>
		</div>
		<div class="control-group">
			<div class="controls">
				<button class="btn btn-primary" data-bind="click: testVoice,enable: speechVoice().length > 0,attr: {'title':((speechVoice().length) > 0 ? '' : 'You must save once first before testing is possible.')}">Test</button>
			</div>
		</div>
	</div>
</form>
